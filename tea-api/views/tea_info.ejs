<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  </head>
  <body style="background-color:peachpuff">
    <nav class="navbar navbar-expand-sm navbar-light" style="background-color:turquoise">
      <div class="collapse navbar-collapse" id="navbarsupportedcontent">
        <ul class="navbar-nav">
      <% if (currentUser) { %>
          <li class="nav-item active"><a class="nav-link" href="/teas"><%= currentUser.username %></a></li>
      <% } else { %>
        <li class="nav-item"><a class="nav-link" href="/user/create">Sign up</a></li>
      <% } %>
      <li class="nav-item"><a class="nav-link" href="/teas/tealist">Teas</a></li>
      <li class="nav-item"><a class="nav-link" href="/teas/create">Add New Tea</a></li>
      <% if (currentUser) { %>
        <li class="nav-item"><a class="nav-link" href="<%= currentUser.url %>">Profile</a></li>
      <% } else { %>
        <li class="nav-item"><a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#loginmodal">Log in</a></li>
        <div class="modal fade" id="loginmodal">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header text-centered">
                <h3>Log in to your account!</h3>
                <button class="btn-close" data-bs-dismiss="modal" data-bs-target="#loginmodal"></button>
              </div>
              <div class="modal-body">
                <div>
                  <form method="POST" action="/userlogin" class="loginform" id="loginform">
                      <div class="row">
                        <div class="form-group col-lg-12 mb-3">
                          <div class="form-floating">
                            <input type="text" id="username" class="form-control" name="username" required="required"></input>
                            <label for="username" class="form-label">Username</label>
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="form-group col-lg-12 mb-3">
                          <div class="form-floating">
                            <input type="password" id="password" name="password" required="required" class="form-control"></input>
                            <label for="password" class="form-label">Password</label>
                          </div>
                        </div>
                      </div>
                    <button class="btn btn-info" type="submit">Log in</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% } %>
      <li class="nav-item"><a class="nav-link" href="/user/userlist">Friends</a></li>
        </ul>
      </div>
    </nav>
    <% if (currentUser) { %>
      <h3>Hello <%= currentUser.username %></h3>
      <a href="/logout">Log out</a>
    <% } %>
    <p>Tea name: <%= tea.tea_name %></p>
    <p>Type: <%= tea.type %> </p>
    <p>Brand: <%= tea.brand %></p>
    <p>Rating: <%= tea.rating %></p>
    <%= tea.notes %>
    <p>Added on  <%= tea.created_on %></p>
    <p>Added by: <a href="<%= user_url %>"> <%= tea.created_by.username %> </a></p>
    <% if (tea.img.data) { %>
      <img src="data:image/<%= tea.img.contentType%>;base64,
      <%= tea.img.data.toString('base64') %>">
    <% } else {%>
      <p>There is no picture for this tea yet!</p>
    <% } %>
    <p></p>
    <a href="<%= tea.url %>/save">Save this tea for later</a>
    <p></p>
    <a href="<%= tea.url %>/favorite">Add this tea to your favorites</a>
    <p></p>
    <% if (currentUser) { %>
    <a href="#" data-bs-toggle="modal" data-bs-target="#teamodal">Recommend this tea to a user</a>
    <div class="modal fade" id="teamodal">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header text-centered">
            <h3>Recommend this tea to a friend!</h3>
            <button class="btn-close" data-bs-dismiss="modal" data-bs-target="#teamodal"></button>
          </div>
          <div class="modal-body">
            <div>
              <form method="POST" action="/teas/<%= tea_id %>/recommend" className="teaform" id="recommendationform">
                  <h4>Recommend this Tea</h4>
                  <input type="hidden" id="recommendedtea" name="recommendedtea" value="<%= tea_id %>"></input>
                  <input type="text" id="recommendedtea" name="recommendedtea" disabled value="<%= tea.tea_name %>"></input>
                  <input type="hidden" name="recommender" id="recommender" value="<%= currentUser.id %>"></input>
                  <select id="user" name="user">
                    <% for (i= 0; i < user_list.length; i++) {%>
                      <% if(currentUser.username !== user_list[i].username) { %>
                      <option value="<%= user_list[i].id %>"><%= user_list[i].username %></option>
                      <% } %>
                    <% } %>
                  </select>
                  <p>Enter a message here:</p>
                  <input type="text" id="recmessage" name="recmessage"></input>
                  <button type="submit">Submit</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% } %>
    <% if (currentUser && currentUser.username === tea.created_by.username) { %>
      <p></p>
      <a href="<%= tea.url %>/update">Update this tea</a>
      <p></p>
      <a href="<%= tea.url %>/delete">Delete this tea</a>
    <% } %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  </body>
</html>